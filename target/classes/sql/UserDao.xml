<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.show.movie.model.dao.UserDAO">

	<resultMap id="user" type="user">
		<id column="userId" property="userId" />
		<result column="userPassword" property="userPassword" />
		<result column="userName" property="userName" />
		<result column="userPhoneNumber" property="userPhoneNumber" />
		<result column="userBirth" property="userBirth" />
		<result column="userSignupCode" property="userSignupCode" />
	</resultMap> 
	
	<resultMap id="login" type="login">
		<id column="userId" property="userId" />
		<result column="userPassword" property="userPassword" />
		<result column="userSignupCode" property="userSignupCode" />
	</resultMap> 

	<!-- 
		private String userId;
	private String userPassword;
	private String userName;
	private String userPhoneNumber;
	private String userBirth;
	private int userCode;
	 -->
	 <!-- INSERT INTO user(userPassword) VALUE #{userPassword} -->
	 <!-- 안되는 부분 -->
	 <insert id = "encrypt" parameterType="login">
		UPDATE user SET userPassword=#{userPassword} WHERE userId = {userId}
	</insert>
	 
	<select id = "getLogin" resultMap="login" parameterType="login">
		SELECT * FROM user WHERE userId = #{userId} and userPassword = #{userPassword}
	</select>

	<select id="getTime" resultType="string">
		SELECT sysdate() FROM dual
	</select>
    <!-- 로그인  -->
	
	<select id="getUser" resultMap="user" parameterType="string">
		SELECT * FROM user WHERE userId = #{userId}
	</select>
 

  	<insert id="insertNewUser" parameterType="user">
		INSERT INTO user(userId,  userName,  userSignupCode)
		VALUES ( #{userId}, #{userName},   #{userCode} )
	</insert> 
	
</mapper>